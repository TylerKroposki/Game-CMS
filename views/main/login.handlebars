<div class="login__wrapper">
    <div class="login">
        <div class="login__container">
            {{#if error}}
                <div class="error_msg">{{error}}</div>
            {{/if}}
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="input-text" type="text" name="username" id="username" autofocus required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="input-text" type="password" name="password" id="password" required>
                </div>
                <div class="form-group">
                    <div class="login__controls">
                        <button class="login__btn" type="submit">Log in</button>
                        <label class="checkbox">
                            <input type="checkbox" checked>
                            <div></div><span>Remember me</span>
                        </label>
                        <div class="clear-fix"></div>
                    </div>
                </div>
                <div class="login__separator"></div>
                <div class="login__links"><a href="#">Forgot your Password ?</a><a href="#">Register now</a></div>
            </form>
        </div>
     </div>
</div>