<div class="main-content" role="main">
    <div class="main-content__side main-content__side--left">
        <div class="news__outer">
            <div class="news">
                <div class="news__title-bar">
                    <h1>Latest news</h1><a href="/forums/f/1">News Archive</a>
                    <div class="clear-fix"></div>
                </div>
                <div class="news__container">
                    {{#each articles}}
                    <article class="news__article">
                        <div class="news__article__avatar">
                            <figure><img src="/static/assets/img/profileImgs/{{authorImg}}" alt="PFP"></figure>
                        </div>
                        <div class="news__article__content">
                            <h1><a href="/forums/t/{{threadID}}">{{threadName}}</a></h1>
                            <p>Posted by <a href="/logs/search/{{author}}"><span>{{author}}</span></a>, {{threadCreateDate}}</p>
                            <div class="news__article__content__container">
                                <p>{{{threadContent}}}</p>
                            </div><br><a href="/forums/t/{{threadID}}">Read More</a>
                        </div>
                        <div class="clear-fix"></div>
                    </article>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
