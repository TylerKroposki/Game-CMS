<div class="main-content hiscores__outer" role="main">
    <div class="main-content__side main-content__side--left">
        <div class="main-block">
            <div class="account">
                <div class="main-block__header main-block__header--secondary">
                    <h1>User: {{profile.userDisplayName}}</h1>
                </div>
                <div class="main-block__body">
                    <div class="account__body">
                        <div class="account__info">
                            <div class="account__info__avatar__outer">
                                <div class="account__info__avatar"><img src="/static/assets/img/profileImgs/{{profile.userProfileImg}}" alt=""></div>
                            </div>
                            <div class="account__info__container">
                                <table>
                                    <tr>
                                        <td>Display name:</td>
                                        <td>{{account.userDisplayName}}</td>
                                    </tr>
                                    <tr>
                                        <td>Rank:</td>
                                        {{#if_eq account.userRights 0}}
                                            <td>Normal User</td>
                                        {{else if_eq account.userRights 1}}
                                            <td><font color="#60FF4F">Moderator</font></td>
                                        {{else if_eq account.userRights 2}}
                                            <td><font color="#faff12;">Administrator</font></td>
                                        {{else if_eq account.userRights 3}}
                                            <td><font color="#879eff">Developer</font></td>
                                        {{/if_eq}}
                                    </tr>
                                    <tr>
                                        <td>Username:</td>
                                        <td>{{account.userName}}</td>
                                    </tr>
                                    <tr>
                                        <td>Email:</td>
                                        <td>{{account.userEmail}}</td>
                                    </tr>
                                </table>
                                <table>
                                    <tr>
                                        <td>Support Rights</td>
                                        <td>{{account.userSupportRights}}</td>
                                    </tr>
                                    <tr>
                                        <td>Credits:</td>
                                        <td>{{account.userCredits}}</td>
                                    </tr>
                                    <tr>
                                        <td>Account status:</td>
                                        {{#if_eq account.userIsBanned 1}}
                                            <td><s><font color="#000">Banned</font></s></td>
                                        {{else}}
                                            <td><font color="#2B4A1F">Not Banned</font></td>
                                        {{/if_eq}}
                                    </tr>
                                    <tr>
                                        <td>Member since:</td>
                                        <td>{{account.userJoinDate}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </div>
                    <div class="account__skills__outer">
                        {{> account/skills}}
                        {{> account/activity}}
                        <div class="clear-fix"></div>
                    </div>
                    <div class="account__clan">
                        <div class="account__clan__container">
                            <h2>
                                <div class="pattern-text"><span class="pattern-text__original">Reign of Terror</span><span class="pattern-text__shadow">Reign of Terror</span></div>
                            </h2>
                            <p>Clan rank: <font color="#65551F">General</font></p><a class="account__clan__btn" href="#">Clan ranking</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
